<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#ffd300</item>
        <item name="colorPrimaryDark">#ffd300</item>
        <item name="colorAccent">#ffd300</item>
        <item name="android:navigationBarColor">#000000</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.OrderManager" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_text</item>
    </style>

    <style name="TextAppearance.AppCompat.Small.OrderManager.Medium" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.OrderManager" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.OrderManager" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/google_sans_text</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.OrderManager.Lighter" parent="TextAppearance.AppCompat.Large.OrderManager">
        <item name="android:textFontWeight">400</item>
    </style>
</resources>